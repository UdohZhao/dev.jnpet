page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.placeholder{
    margin: 10rpx;
    padding: 0 20rpx;
}
.weui-navbar{
  background-color: #ffffff;
}
.commodity-panel{
    background-color: #f8f8f8;
}
.commodity-flex{
  width: 50%;
  display: inline-flex;
}
.commodity-box{
  background-color: #ffffff;
  position: relative;
}
.img-thumb{
  width: 100%;
  height: 150px;
}
.commodity-title{
  font-size: 32rpx;
  padding: 0 10rpx;
}
.commodity-price{
  position: absolute;
  top: 0;
  right: 0;
  background-color: #000000;
  background:rgba(0,0,0,0.3);
  color: #ffffff;
  width: 70px;
  font-size: 16px;
  text-align: center;
}
.banner{
  width: 100%;
  height: 160rpx;
}